

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IТ News</title>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #000080">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(IT_News.Resources.Resource.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(IT_News.Resources.Resource.UserPage, "Index", "Page")</li>
                    <li>@Html.ActionLink(IT_News.Resources.Resource.CreatePage, "Create", "Page")</li>
                    <li>
                        @if (IT_News.Resources.Resource.Language == "RU")
                        {
                        <span class="glyphicon glyphicon-globe" style="color: azure; top: 15px;">@Html.ActionLink("RU", "ChooseLang", "Home", new { languageAbbrevation = "EN" }, new { style = "color: azure" })</span>
                            @*@Html.ActionLink("RU", "ChooseLang", "Home", new { languageAbbrevation = "EN" }, new object())*@
                            @*<a href="#">
                <span class="glyphicon glyphicon-globe">@IT_News.Resources.Resource.Language </span>
            </a>*@
                        }
                        else
                        {
                        <span class="glyphicon glyphicon-globe" style="color: azure; top: 15px;">@Html.ActionLink("EN", "ChooseLang", "Home", new { languageAbbrevation = "RU", @class = "glyphicon glyphicon - globe" }, new { style = "color: azure" })</span>
                            @*@Html.ActionLink("EN", "ChooseLang", "Home", new { languageAbbrevation = "RU", @class = "glyphicon glyphicon - globe" }, new object())*@
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>

    </div>
<div class="container body-content">
    @RenderBody()       
</div>
<footer>
    <p>&copy; @DateTime.Now.Year - IT News</p>
</footer>
    @Styles.Render("~/Content/css")
@*<script src="/Scripts/jquery.unobtrusive-ajax.min.js" type = "text/javascript" ></script>*@

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
